@using MVCForum.Domain.Constants
@using System.Linq;
@using MVCForum.Utilities
@model MVCForum.Website.ViewModels.HighEarnersPointViewModel

@if (Html.Settings().EnablePoints)
{
    <div class="side-box highearners-box">
        <h4 class="top-level-header" style="font-weight:bold;">@Html.LanguageString("Points.ThisWeeksHighEarners")</h4>
        <div class="sidebar-content">
            <ul>
                @foreach (var dict in Model.HighEarners.Where(x => x.Value > 0))
                {
                    <li>
                        <span class="earnername">
                            <img src="@dict.Key.MemberImage(AppConstants.GravatarLeaderboardSize)" alt="@dict.Key.UserName">
                            <a href="@dict.Key.NiceUrl">@dict.Key.UserName</a>
                        </span>
                        <span class="earneramount">@dict.Value</span>
                    </li>
                }
            </ul>

        </div>
    </div>
}